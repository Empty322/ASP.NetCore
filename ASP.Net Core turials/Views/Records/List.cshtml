@using ASP.Net_Core_turials.Models
@model IEnumerable<RecordListViewModel>
@{
    ViewData["Title"] = "Home";
}

<div class="row">
    @foreach(RecordListViewModel r in Model)
    {
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card">
            <img class="card-img-top" src="~/img/placeholder.jpg">
            <div class="card-body">
                <h6 class="card-title">@r.Record.Title</h6>
                <p class="card-text">@r.ArtistName</p>
                <a class="btn-sm btn-primary" asp-controller="Records" asp-action="Record" asp-route-id="@r.Record.RecordId">More info</a>
            </div>
        </div>
    </div>
    }
</div>
