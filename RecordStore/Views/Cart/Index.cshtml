@model Cart

@{
    ViewData["Title"] = "Index";
}

<div class="content">
    <h2>Cart</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Amount</th>
                <th width="100"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model.Products)
            {
                <tr>
                    <td>
                        <a asp-controller="Artists" asp-action="Artist" asp-route-id="@product.Record.ArtistId">@product.Record.Artist.Name</a> -
                        <a asp-controller="Records" asp-action="Record" asp-route-id="@product.Record.RecordId">@product.Record.Title</a>
                    </td>
                    <td>@product.Amount</td>
                    <td><button class="btn btn-danger delete-item" id="@product.Record.RecordId">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-controller="Cart" asp-action="Order">Order</a>
</div>

@section scripts{
    <script>
        $(document).ready(SetDeleteItemButtons())
    </script>
}